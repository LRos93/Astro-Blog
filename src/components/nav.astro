---
import "../styles/global.css";
---

<div class="nav-container">
  <div class="nav-logo">
    <img src="public/images/substatik-logo.svg" alt="Logo" />
  </div>
  <ul>
    <li><a href="#">Work</a></li>
    <li><a href="#">Services</a></li>
    <li><a href="#">About</a></li>
    <li><a href="#">Contact</a></li>
  </ul>
</div>

<div class="nav-container-scroll">
  <div class="nav-logo rotated">
    <img src="public/images/substatik-logo.svg" alt="Logo" />
  </div>
  <div class="nav-menu" id="js-nav-menu">
    <div class="menu-text">
      <div class="text-wrapper">Menu<br />Close</div>
    </div>
    <div class="menu-icon">
      <div class="toggle-line-top"></div>
      <div class="toggle-line-bottom"></div>
    </div>
  </div>
</div>
<div class="menu-container" id="js-menu-container">
  <p></p>
</div>

<style>
  .nav-container-scroll {
    visibility: hidden;
    top: 18px;
    opacity: 0;
    position: fixed;
    width: 100%;
    padding: 24px 40px;
    background-color: none;
    display: flex;
    justify-content: space-between;
    align-items: top;
    mix-blend-mode: difference;
    z-index: 9999;
    transition: all 700ms ease-in-out;
  }

  .visible {
    visibility: visible;
    top: 40px;
    opacity: 1;
  }

  .nav-menu {
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: pointer;
  }

  .menu-text {
    width: 80px;
    height: 18px;
    overflow: hidden;
    color: white;
  }

  .text-wrapper {
    font-size: 16px;
    text-align: end;
    color: white;
    transition: all 400ms ease-in-out;
  }

  .menu-icon {
    position: relative;
    height: 56px;
    width: 56px;
    border-radius: 50%;
    background-color: var(--background);
  }

  .toggle-line-top {
    position: absolute;
    width: 26px;
    height: 2px;
    background-color: black;
    left: 15px;
    top: 24px;
    transition: all 300ms ease-in-out;
  }

  .toggle-line-bottom {
    position: absolute;
    width: 26px;
    height: 2px;
    background-color: black;
    left: 15px;
    bottom: 24px;
    transition: all 200ms ease-in-out;
  }

  .toggle-line-top.opened {
    top: 27px;
    transform: rotate(135deg);
  }

  .toggle-line-bottom.opened {
    bottom: 27px;
    transform: rotate(-135deg);
  }

  .text-wrapper.opened {
    transform: translateY(-23px);
  }

  .menu-container {
    position: fixed;
    top: 56px;
    right: -100%;
    width: 300px;
    height: 400px;
    background-color: white;
    transition: opacity 300ms ease-out 200ms, right 300ms ease-out 0ms;
    border-radius: 0px;
    padding: 24px;
    opacity: 0;
    z-index: 998;
  }

  .menu-container.show {
    right: 32px;
    opacity: 1;
  }
</style>

<script>
  const navBar = document.querySelector(".nav-container-scroll");

  window.addEventListener("scroll", function () {
    if (window.scrollY >= 500) {
      navBar.classList.add("visible");
    } else {
      navBar.classList.remove("visible");
    }
  });

  const navMenu = document.getElementById("js-nav-menu");
  const menuContainer = document.getElementById("js-menu-container");
  const toggleLines = document.querySelectorAll(
    ".toggle-line-top, .toggle-line-bottom, .text-wrapper"
  );

  navMenu.addEventListener("click", () => {
    menuContainer.classList.toggle("show");
    toggleLines.forEach((line) => line.classList.toggle("opened"));
  });
</script>
