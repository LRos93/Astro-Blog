---
import "../styles/global.css";

const { serviceName, serviceDescription, serviceImage } = Astro.props;
---

<div class="service-container">
  <img class="service-image" src={`images/${serviceImage}`} alt="" />
  <h4 class="title">{serviceName}</h4>
  <div class="link-arrow">
    <img src="/images/arrow-up-right.svg" alt="" />
  </div>
  <p class="description">{serviceDescription}</p>
</div>

<style>

  .title,
  .description, .link-arrow {
    z-index: 10;
  }
  .service-container {
    position: relative;
    min-height: 70vh;
    flex: 1;
    padding: 40px;
    overflow: hidden;
    color: var(--background);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .service-image {
    object-fit: cover;
    object-position: center;
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    opacity: 0.15;
    transition: all 400ms ease-in-out;
    z-index: 1;
  }

  .service-container:hover .service-image {
    opacity: 0.8;
    transform: scale(1.1);
  }

  .link-arrow {
    position: absolute;
    height: 16px;
    width: 16px;
    top: 40px;
    right: 40px;
    background-color: var(--background);
    border-radius: 50%;
    opacity: 0;
    transition: all 400ms ease-in-out;
  }

  .service-container:hover .link-arrow {
    height: 72px;
    width: 72px;
    top: 20px;
    right: 20px;
    opacity: 1;
  }

  .link-arrow img {
    position: absolute;
    bottom: 24px;
    left: 24px;
    transition: all 300ms ease-in-out 200ms;
  }
</style>
