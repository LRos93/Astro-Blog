<div class="slider">
    <img src="public/images/test-background.png" class="slide active">
    <img src="public/images/mrb_1.png" class="slide">
    <img src="https://unsplash.com/photos/_khI99iwM10" class="slide">
  </div>
  
  <script>
    const slides = document.querySelectorAll('.slide');
    let currentSlide = 0;
  
    function nextSlide() {
      slides[currentSlide].classList.remove('active');
      currentSlide = (currentSlide + 1) % slides.length;
      slides[currentSlide].classList.add('active');
    }
  
    setInterval(nextSlide, 6000);
  </script>
  
  <style>
    .slider {
      position: relative;
      height: 800px;
      width: 100%;
    }
  
    .slide {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0;
      transition: opacity 600ms ease-out;
    }
  
    .slide.active {
      opacity: 1;
    }
  </style>
  