---
import "../styles/global.css";
---

<div class="slider">
  <div class="fw-container">
    <div class="heading-wrapper">
      <div class="hd-subtext">
        Design studio specializing in branding, web development and packaging
        design.
      </div>

      <div class="hd-headline"><span>Where ideas</span></div>
      <div class="hd-headline"><span>turn into</span></div>
      <div class="hd-headline"><span>meaningful</span></div>
      <div class="hd-headline"><span>digital solutions.</span></div>
      
    </div>
    <div class="hd-project-wrapper">
      <div class="hd-project-name">Carbon Cannabis<br />Branding and Web</div>
      <div class="next-project-btn">Next Project</div>
    </div>
  </div>

  <img src="/public/images/test-background.png" class="slide active" />
  <img src="/public/images/test-2.webp" class="slide" />
  <img src="/public/images/test-3.webp" class="slide" />
</div>

<script>
  const slides = document.querySelectorAll(".slide");
  let currentSlide = 0;

  function nextSlide() {
    slides[currentSlide].classList.remove("active");
    currentSlide = (currentSlide + 1) % slides.length;
    slides[currentSlide].classList.add("active");
  }

  setInterval(nextSlide, 6000);
</script>

<style>
  .slider {
    position: relative;
    height: 1100px;
    width: 100%;
    overflow: hidden;
  }

  .slide {
    top: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: left;
    opacity: 0;
    transition: opacity 800ms ease-in-out;
    z-index: -100;
  }

  .slide.active {
    opacity: 1;
    z-index: -99;
  }

  .hd-subtext {
  font-size: 20px;
  line-height: 28px;
  padding: 24px 0;
  border-bottom: solid white 1px;
  border-top: solid white 1px;
  width: 390px;
  margin-bottom: 72px;
}

.hd-headline {
  font-size: 96px;
  line-height: 100px;
  width: 710px;
  overflow: hidden;
  opacity: 1;
}

.hd-headline span {
  display: inline-block;
  animation-name: move;
  animation-duration: 3s;
  animation-fill-mode: forwards;
  animation-timing-function: cubic-bezier(0.08, 0.8, 0.2, 1);
}

@keyframes move {
  from {
    transform: translateY(140px) skewY(5deg);
    opacity: 0;
  }
  to {
    transform: translateY(0px) skewY(0deg);
    opacity: 1;
  }
}
</style>
